{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"palette": {
		"accent": "#f1f5f9",
		"destructive": "#ef4444",
		"primary": "#2563eb"
	},
	"blocks": [
		{
			"alignment": "left",
			"segments": [
				{
					"foreground": "p:accent",
					"style": "powerline",
					"template": "\u279c",
					"type": "text"
				},
				{
					"foreground": "p:primary",
					"properties": {
						"style": "folder"
					},
					"style": "plain",
					"template": "  {{ .Path }} ",
					"type": "path"
				},
				{
					"foreground": "p:destructive",
					"properties": {
						"branch_icon": ""
					},
					"style": "plain",
					"template": "<p:primary>git:(</>{{ .HEAD }}<p:primary>)</> âœ—",
					"type": "git"
				}
			],
			"type": "prompt"
		}
	],
	"final_space": true,
	"version": 2
}
